{
  "name": "todo-list-monorepo",
  "version": "1.0.0",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "client": "npm run dev --workspace=client",
    "server": "npm run dev --workspace=server",
    "dev": "npm-run-all --parallel client server",
    "build": "npm run build --workspaces"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
